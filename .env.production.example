# =====================================================
# PULSE OF PEOPLE - FRONTEND PRODUCTION ENVIRONMENT
# =====================================================
# Copy this file to .env.production and update with your actual values

# =====================================================
# API CONFIGURATION (REQUIRED)
# =====================================================
VITE_DJANGO_API_URL=https://api.yourdomain.com
VITE_API_TIMEOUT=30000  # 30 seconds

# =====================================================
# SUPABASE CONFIGURATION (If using Supabase features)
# =====================================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================
VITE_APP_NAME=Pulse of People
VITE_APP_URL=https://yourdomain.com
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# =====================================================
# MAPBOX (REQUIRED)
# =====================================================
VITE_MAPBOX_ACCESS_TOKEN=pk.your-production-mapbox-token

# =====================================================
# AUTHENTICATION
# =====================================================
VITE_JWT_EXPIRY=900  # 15 minutes
VITE_REFRESH_TOKEN_EXPIRY=604800  # 7 days
VITE_ENABLE_2FA=true
VITE_ENABLE_SOCIAL_LOGIN=false

# =====================================================
# MONITORING & ANALYTICS
# =====================================================
# Sentry (Error Tracking)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1  # 10%

# Google Analytics
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager
VITE_GTM_ID=GTM-XXXXXXX

# Mixpanel (User Analytics)
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Hotjar (User Behavior)
VITE_HOTJAR_ID=your-hotjar-id
VITE_HOTJAR_VERSION=6

# =====================================================
# FEATURE FLAGS
# =====================================================
VITE_ENABLE_SOCIAL_MEDIA=true
VITE_ENABLE_INFLUENCER_TRACKING=true
VITE_ENABLE_FIELD_REPORTS=true
VITE_ENABLE_SURVEYS=true
VITE_ENABLE_AI_INSIGHTS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REALTIME=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=true

# =====================================================
# REGIONAL SETTINGS
# =====================================================
VITE_DEFAULT_REGION=ap-south-1
VITE_DEFAULT_TIMEZONE=Asia/Kolkata
VITE_DEFAULT_CURRENCY=INR
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,hi,ta,te,kn

# Date/Time Format
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIME_FORMAT=HH:mm
VITE_DATETIME_FORMAT=DD/MM/YYYY HH:mm

# =====================================================
# SUBSCRIPTION & BILLING
# =====================================================
VITE_MONTHLY_FEE=6000
VITE_TRIAL_DAYS=14
VITE_GRACE_PERIOD_DAYS=7
VITE_ENABLE_BILLING=true
VITE_PAYMENT_GATEWAY=razorpay  # razorpay or stripe

# Razorpay (India)
VITE_RAZORPAY_KEY_ID=rzp_live_your-key-id

# Stripe (International)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key

# =====================================================
# RATE LIMITING & QUOTAS
# =====================================================
VITE_MAX_API_CALLS_PER_HOUR=10000
VITE_MAX_STORAGE_GB=100
VITE_MAX_USERS=100
VITE_MAX_FILE_SIZE_MB=10
VITE_MAX_UPLOAD_BATCH_SIZE=100

# =====================================================
# SECURITY
# =====================================================
VITE_ENABLE_SECURITY_HEADERS=true
VITE_ENABLE_CSP=true
VITE_ENABLE_XSS_PROTECTION=true
VITE_SESSION_TIMEOUT=900  # 15 minutes of inactivity
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION=1800  # 30 minutes

# =====================================================
# PERFORMANCE
# =====================================================
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_COMPRESSION=true
VITE_CACHE_MAX_AGE=86400  # 1 day
VITE_API_CACHE_DURATION=300  # 5 minutes

# =====================================================
# CDN & ASSETS
# =====================================================
VITE_CDN_URL=https://cdn.yourdomain.com
VITE_STATIC_URL=https://static.yourdomain.com
VITE_MEDIA_URL=https://media.yourdomain.com

# =====================================================
# WEBSOCKETS & REALTIME
# =====================================================
VITE_WS_URL=wss://ws.yourdomain.com
VITE_ENABLE_WEBSOCKETS=true
VITE_WS_RECONNECT_INTERVAL=5000  # 5 seconds
VITE_WS_MAX_RETRIES=10

# =====================================================
# NOTIFICATIONS
# =====================================================
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true
VITE_ENABLE_SMS_NOTIFICATIONS=true
VITE_ENABLE_IN_APP_NOTIFICATIONS=true

# Firebase Cloud Messaging (Push Notifications)
VITE_FCM_VAPID_KEY=your-firebase-vapid-key
VITE_FCM_API_KEY=your-firebase-api-key
VITE_FCM_PROJECT_ID=your-firebase-project-id
VITE_FCM_MESSAGING_SENDER_ID=your-sender-id
VITE_FCM_APP_ID=your-firebase-app-id

# =====================================================
# THIRD-PARTY INTEGRATIONS
# =====================================================
# Social Media OAuth
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_TWITTER_CLIENT_ID=your-twitter-client-id

# Maps & Location
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-key
VITE_ENABLE_GEOLOCATION=true

# =====================================================
# UI/UX CONFIGURATION
# =====================================================
VITE_THEME=light  # light, dark, auto
VITE_PRIMARY_COLOR=#1976d2
VITE_SECONDARY_COLOR=#dc004e
VITE_DEFAULT_LANGUAGE=en
VITE_ITEMS_PER_PAGE=20
VITE_MAX_ITEMS_PER_PAGE=100

# =====================================================
# DEPLOYMENT
# =====================================================
VITE_DEPLOYMENT_PLATFORM=vercel  # vercel, netlify, cloudflare
VITE_ENVIRONMENT=production
VITE_BUILD_ID=${VITE_BUILD_ID}
VITE_COMMIT_SHA=${VITE_COMMIT_SHA}
VITE_DEPLOY_TIMESTAMP=${VITE_DEPLOY_TIMESTAMP}

# =====================================================
# DEBUGGING (Disable in Production)
# =====================================================
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_ENABLE_REACT_QUERY_DEVTOOLS=false
VITE_ENABLE_CONSOLE_LOGS=false
VITE_ENABLE_SOURCE_MAPS=false

# =====================================================
# MULTI-TENANT MODE (Currently Disabled)
# =====================================================
VITE_MULTI_TENANT=false
VITE_TENANT_MODE=subdomain
VITE_DEFAULT_TENANT=demo

# =====================================================
# COMPLIANCE & LEGAL
# =====================================================
VITE_PRIVACY_POLICY_URL=https://yourdomain.com/privacy
VITE_TERMS_OF_SERVICE_URL=https://yourdomain.com/terms
VITE_COOKIE_POLICY_URL=https://yourdomain.com/cookies
VITE_GDPR_COMPLIANCE=true
VITE_ENABLE_COOKIE_CONSENT=true

# =====================================================
# SUPPORT & HELP
# =====================================================
VITE_SUPPORT_EMAIL=support@yourdomain.com
VITE_SUPPORT_PHONE=+91-XXXXXXXXXX
VITE_HELP_CENTER_URL=https://help.yourdomain.com
VITE_STATUS_PAGE_URL=https://status.yourdomain.com

# =====================================================
# EXPERIMENTAL FEATURES (Use with caution)
# =====================================================
VITE_ENABLE_BETA_FEATURES=false
VITE_ENABLE_A_B_TESTING=false
VITE_ENABLE_FEATURE_TOURS=true

# =====================================================
# DEVELOPMENT OVERRIDES (Leave Empty in Production)
# =====================================================
# VITE_DEV_MODE=false
# VITE_DEV_TENANT_SLUG=
# VITE_API_GATEWAY_URL=
